    <div>App/Helpers</div>
    <div><%= "#{(@count_helpers.to_f / @one_procent).round}%" %></div>
  </div>
  <% end %>
  <% if @count_models != 0%>
  <div style=<%= "width:#{@count_models.to_f / @one_procent}%;background:yellow;height:80px;justify-content:center;align-items:center;flex-direction:column" %>>
    <div><%= "Count: #{@count_models}" %></div>
    <div>App/Models</div>
    <div><%= "#{(@count_models.to_f / @one_procent).round}%" %></div>
  </div>
  <% end %>
