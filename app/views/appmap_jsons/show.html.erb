<%= link_to "Home", "/" %>
<h3 style='display:flex;justify-content:center;'><%= @appmap_json.path %></h3>

<div style='display:flex;flex-:column:row;'>
  <div style=<%= "width:#{@count_controllers != 0 ? @count_controllers.to_f / @one_procent : 0}%;background:blue;height:80px;display:#{@count_controllers != 0 ? "flex" : "none"};justify-content:center;align-items:center;flex-direction:column" %>>
