    <div>App/Helpers</div>
    <div><%= "#{(@count_helpers.to_f / @one_procent).round}%" %></div>
  </div>
  <div style=<%= "width:#{@count_models != 0 ? @count_models.to_f / @one_procent : 0}%;background:yellow;height:80px;display:#{@count_models != 0 ? "flex" : "none"};justify-content:center;align-items:center;flex-direction:column" %>>
