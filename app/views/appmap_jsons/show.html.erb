<%= link_to "Home", "/" %>
<h3 style='display:flex;justify-content:center;'><%= @appmap_json.name %></h3>
<% if @count_controllers != 0%>
<div style='display:flex;flex-:column:row;'>
  <div style=<%= "width:#{@count_controllers.to_f / @one_procent}%;background:blue;height:80px;justify-content:center;align-items:center;flex-direction:column" %>>
    <div><%= "Count: #{@count_controllers}" %></div>
    <div>App/Controllers</div>
    <div><%= "#{(@count_controllers.to_f / @one_procent).round}%" %></div>
  </div>
<% end %>
